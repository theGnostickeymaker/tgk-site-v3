<h1>Subscribe</h1>
<p>Pick a plan. Manage or cancel any time in your Account.</p>

<div class="plans">
  <button id="initiate">Start Initiate</button>
  <button id="adept">Start Adept Access</button>
  <button id="lifetime">Lifetime / Founder</button>
</div>

<script>
async function go(priceId){
  if(!priceId){ alert("Missing price ID. Check env variables."); return; }
  const r = await fetch("/.netlify/functions/create-checkout-session", {
    method:"POST", headers:{"Content-Type":"application/json"},
    body: JSON.stringify({ priceId })
  });
  const d = await r.json();
  if(d.url) location = d.url; else alert(d.error || "Error starting checkout");
}
document.getElementById("initiate").onclick = () => go("{{ env.PRICE_INITIATE_IDS[0] | default('') }}");
document.getElementById("adept").onclick = () => go("{{ env.PRICE_FULL_IDS[0] | default('') }}");
document.getElementById("lifetime").onclick = () => go("{{ env.PRICE_FULL_LIFETIME_IDS[0] | default('') }}");
</script>
