<main class="main-content page-auth">
  <section class="content-container">
    <div class="auth-glyph-wrap"><div class="auth-glyph glow">âœ¶</div></div>

    <section class="section-block auth-form">
      <h2 class="section-heading">Set a New Password</h2>
      <p class="lead muted">Enter your new password below to complete the reset.</p>

      <form id="new-password-form" class="tgk-form">
        <div class="form-group password-group">
          <label for="new-password">New Password</label>
          <div class="password-wrapper">
            <input type="password" id="new-password" placeholder="8+ characters, be wise" required>
            <button type="button" class="toggle-password" aria-label="Show password">ðŸ™ˆ</button>
          </div>
        </div>

        <button type="submit" class="btn outline full-width">Update Password</button>
      </form>

      <div id="reset-msg" class="auth-feedback" hidden></div>
    </section>
  </section>

  <div class="gnostic-divider">
    <span class="divider-symbol pillar-glyph spin glow">{{ glyph }}</span>
  </div>
</main>

<script type="module">
  import { getAuth, confirmPasswordReset } from "https://www.gstatic.com/firebasejs/10.14.0/firebase-auth.js";
  import { app } from "/js/firebase-init.js";

  const auth = getAuth(app);
  const form = document.getElementById("new-password-form");
  const msg = document.getElementById("reset-msg");
  const toggle = document.querySelector(".toggle-password");
  const input = document.getElementById("new-password");

  // Extract reset code from query string
  const params = new URLSearchParams(window.location.search);
  const oobCode = params.get("oobCode");

  if (!oobCode) {
    msg.hidden = false;
    msg.textContent = "Invalid or expired password reset link.";
    form.style.display = "none";
  }

  // Toggle monkey eyes
  toggle.addEventListener("click", () => {
    const isHidden = input.getAttribute("type") === "password";
    input.setAttribute("type", isHidden ? "text" : "password");
    toggle.textContent = isHidden ? "ðŸ™‰" : "ðŸ™ˆ";
    toggle.setAttribute("aria-label", isHidden ? "Hide password" : "Show password");
  });

  // Submit new password
  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    const newPassword = input.value;
    msg.hidden = false;
    msg.textContent = "Updating password...";
    try {
      await confirmPasswordReset(auth, oobCode, newPassword);
      msg.textContent = "Password updated successfully. Redirecting to sign in...";
      form.reset();
      input.setAttribute("type", "password");
      toggle.textContent = "ðŸ™ˆ";

      // Gentle delay before redirect
      setTimeout(() => {
        window.location.href = "/signin/";
      }, 2500);

    } catch (error) {
      msg.textContent = error.message;
    }
  });
</script>

