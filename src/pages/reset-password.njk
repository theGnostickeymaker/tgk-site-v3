---

<main class="main-content page-auth">
  <section class="content-container">

    <div class="auth-glyph-wrap">
      <div class="auth-glyph glow">✶</div>
    </div>

    <section class="section-block auth-form">
      <h2 class="section-heading">Set a New Password</h2>
      <p class="lead muted">Enter your new password below to complete the reset process.</p>

      <form id="new-password-form" class="tgk-form" novalidate>
        <div class="form-group">
          <label for="new-password">New Password</label>
          <input
            type="password"
            id="new-password"
            placeholder="At least 8 characters"
            autocomplete="new-password"
            required>
        </div>

        <button type="submit" class="btn outline full-width">Update Password</button>
      </form>

      <div id="reset-msg" class="auth-feedback" role="alert" hidden></div>
    </section>

  </section>

  <div class="gnostic-divider">
    <span class="divider-symbol pillar-glyph spin glow">{{ glyph }}</span>
  </div>
</main>

<script type="module">
  import { getAuth, confirmPasswordReset } from "https://www.gstatic.com/firebasejs/10.14.0/firebase-auth.js";
  import { app } from "/js/firebase-init.js";

  const auth = getAuth(app);
  const form = document.getElementById("new-password-form");
  const msg = document.getElementById("reset-msg");
  const params = new URLSearchParams(window.location.search);
  const oobCode = params.get("oobCode");

  if (!oobCode) {
    msg.hidden = false;
    msg.textContent = "This reset link is invalid or has expired.";
    form.style.display = "none";
  }

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    msg.hidden = false;
    msg.textContent = "Updating password...";

    const newPassword = document.getElementById("new-password").value.trim();

    try {
      await confirmPasswordReset(auth, oobCode, newPassword);

      msg.textContent = "Your password has been updated successfully. Redirecting to sign in...";
      form.reset();

      setTimeout(() => {
        window.location.href = "/signin/";
      }, 2500);

    } catch (error) {
      console.error("[Password Reset] Error:", error);
      msg.textContent = "Unable to update password. Please check the link and try again.";
    }
  });
</script>
