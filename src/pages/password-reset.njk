---
layout: base.njk
title: "Reset Password"
description: "Recover access to your TGK account."
glyph: "✶"
bodyClass: "lightgold"
permalink: "/password-reset/index.html"
---

<main class="main-content page-auth">
  <section class="content-container">

    <div class="auth-glyph-wrap">
      <div class="auth-glyph glow">✶</div>
    </div>

    <section class="section-block auth-form">
      <h2 class="section-heading">Reset Your Password</h2>
      <p class="lead muted">Enter your email to receive a sacred recovery link.</p>

      <form id="reset-form" class="tgk-form">
        <div class="form-group">
          <label for="reset-email">Email Address</label>
          <input type="email" id="reset-email" placeholder="you@example.com" required>
        </div>

        <button type="submit" class="btn gold full-width">Send Reset Link</button>
      </form>

      <p class="auth-note"><a href="/signin/">Back to Sign In</a></p>
      <div id="reset-msg" class="auth-feedback" role="alert" hidden></div>
    </section>
  </section>

  <div class="gnostic-divider">
    <span class="divider-symbol pillar-glyph spin glow">{{ glyph }}</span>
  </div>
</main>

<script type="module">
  import { getAuth, sendPasswordResetEmail } from "https://www.gstatic.com/firebasejs/10.14.0/firebase-auth.js";
  import { app } from "/js/firebase-init.js";

  const auth = getAuth(app);
  const form = document.getElementById("reset-form");
  const msg = document.getElementById("reset-msg");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    msg.hidden = false;
    msg.textContent = "Sending reset link...";
    try {
      await sendPasswordResetEmail(auth, document.getElementById("reset-email").value);
      msg.textContent = "A reset link has been sent to your email.";
    } catch (err) {
      msg.textContent = err.message;
    }
  });
</script>
