---
layout: base.njk
title: "Reset Password"
description: "Recover access to your TGK account."
glyph: "☥"
glyphRow: ["☥", "✶", "☥"]
bodyClass: "lightgold"
permalink: "/password-reset/index.html"

breadcrumbs:
  - { title: "The Gnostic Key", url: "/" }
  - { title: "Membership", url: "/membership/" }
  - { title: "Dashboard", url: "/dashboard/" }
  - { title: "Password Reset" }
---

<main class="main-content page-auth">
  <section class="content-container">

    <div class="auth-glyph-wrap">
      <div class="auth-glyph glow">✶</div>
    </div>

    <section class="section-block auth-form">
      <h2 class="section-heading">Reset Your Password</h2>
      <p class="lead muted">Enter your email address to receive a secure recovery link.</p>

      <form id="reset-form" class="tgk-form" novalidate>
        <div class="form-group">
          <label for="reset-email">Email Address</label>
          <input
            type="email"
            id="reset-email"
            placeholder="you@example.com"
            autocomplete="email"
            required>
        </div>

        <button type="submit" class="btn outline full-width">Send Reset Link</button>
      </form>

      <p class="auth-note">
        <a href="/signin/">Back to Sign In</a>
      </p>

      <div id="reset-msg" class="auth-feedback" role="alert" hidden></div>
    </section>

  </section>

  <div class="gnostic-divider">
    <span class="divider-symbol pillar-glyph spin glow">{{ glyph }}</span>
  </div>
</main>

<script type="module">
  import { getAuth, sendPasswordResetEmail } from "https://www.gstatic.com/firebasejs/10.14.0/firebase-auth.js";
  import { app } from "/js/firebase-init.js";

  const auth = getAuth(app);
  const form = document.getElementById("reset-form");
  const msg = document.getElementById("reset-msg");
  const emailField = document.getElementById("reset-email");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    msg.hidden = false;
    msg.textContent = "Sending reset link...";

    try {
      await sendPasswordResetEmail(auth, emailField.value.trim());
      msg.textContent = "A password reset link has been sent to your email address.";
    } catch (error) {
      console.error("[Password Reset] Error:", error);
      msg.textContent = "Unable to send reset link. Please check the address and try again.";
    }
  });
</script>
