<body>
<main class="main-content page-auth gold">
  <section class="content-container">

    <section class="section-block auth-form">
      <h2 class="section-heading">Join The Gnostic Key</h2>
      <p class="lead">
        Create a free account to access your dashboard, save bookmarks,<br>
        and begin your Initiation into the hidden pages.
      </p>

      <form id="signup-form" class="tgk-form" novalidate>
        <div class="form-group">
          <label for="signup-email">Email Address</label>
          <input
            type="email"
            id="signup-email"
            placeholder="you@example.com"
            autocomplete="email"
            required
            minlength="5"
            aria-describedby="email-hint"
          >
          <small id="email-hint" class="form-hint">We'll never share your email.</small>
        </div>

        <div class="form-group">
          <label for="signup-password">Password</label>
          <input
            type="password"
            id="signup-password"
            placeholder="8+ characters, be wise"
            autocomplete="new-password"
            required
            minlength="8"
            aria-describedby="password-hint"
          >
          <small id="password-hint" class="form-hint">Minimum 8 characters. Choose wisely.</small>
        </div>

        <button type="submit" class="btn gold full-width" id="signup-submit">
          <span class="btn-text">Create Account</span>
          <span class="btn-loading" hidden>Creating...</span>
        </button>
      </form>

      <p class="auth-note">
        Already initiated? <a href="/signin/">Sign in here</a>.
      </p>

      <div id="auth-feedback" class="auth-feedback" role="alert" hidden></div>
    </section>

  </section>

  <div class="gnostic-divider">
    <span class="divider-symbol pillar-glyph spin glow" aria-hidden="true">{{ glyph }}</span>
  </div>
</main>

<!-- Inline gate (consumeReturnUrl) -->
<script type="module">
  const RETURN_KEY = "tgk-return-url";
  window.__TGK_GATE__ = window.__TGK_GATE__ || {
    saveReturnUrl(url = window.location.href) {
      if (!url.startsWith(window.location.origin)) return;
      if (url === window.location.origin + "/" || url.includes("/index.html")) return;
      sessionStorage.setItem(RETURN_KEY, url);
      localStorage.setItem(RETURN_KEY, url);
    },
    consumeReturnUrl() {
      const url = sessionStorage.getItem(RETURN_KEY) || localStorage.getItem(RETURN_KEY);
      if (!url || !url.startsWith(window.location.origin)) return false;
      sessionStorage.removeItem(RETURN_KEY);
      localStorage.removeItem(RETURN_KEY);
      window.location.replace(url);
      return true;
    }
  };
</script>

