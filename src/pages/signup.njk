{% block head %}
  {% set socialImage = "/tgk-assets/images/share/system/signup.jpg" %}
  {% include "partials/head-meta.njk" %}
  {% set headline = "Join The Gnostic Key â€” Create Account" %}
  {% include "partials/jsonld-collection.njk" %}
{% endblock %}

<main class="main-content page-auth">
  <section class="content-container">

    <div class="auth-glyph-wrap">
      <div class="auth-glyph glow">ðŸœ‚</div>
    </div>

    <section class="section-block auth-form">
      <h2 class="section-heading">Begin Your Initiation</h2>
      <p class="lead muted">
        Create a free account to unlock your dashboard, save bookmarks,<br>
        and begin your path through the hidden pages.
      </p>

      <form id="signup-form" class="tgk-form" novalidate autocomplete="off">
        <div class="form-group">
          <label for="signup-email">Email Address</label>
          <input
            type="email"
            id="signup-email"
            placeholder="you@example.com"
            autocomplete="email"
            required>
        </div>

        <div class="form-group password-group">
          <label for="signup-password">Password</label>
          <div class="password-wrapper">
            <input
              type="password"
              id="signup-password"
              placeholder="8+ characters, be wise"
              autocomplete="new-password"
              required>
            <button type="button" class="toggle-password" aria-label="Show password">ðŸ™ˆ</button>
          </div>
        </div>

        <div class="btn-wrap centre">
          <button type="submit" class="btn outline full-width">Create Account</button>
          <span id="signup-status" class="small muted"></span>
        </div>
      </form>

      <p class="auth-note">
        Already initiated? <a href="/signin/">Sign in here</a>.
      </p>
    </section>
  </section>

  <div class="gnostic-divider">
    <span class="divider-symbol pillar-glyph spin glow">{{ glyph }}</span>
  </div>
</main>

<script type="module" src="/js/tgk-auth.js?v={{ bust }}" defer></script>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const toggle = document.querySelector('.toggle-password');
  const input = document.getElementById('signup-password');

  toggle.addEventListener('click', () => {
    const hidden = input.getAttribute('type') === 'password';
    input.setAttribute('type', hidden ? 'text' : 'password');
    toggle.textContent = hidden ? 'ðŸ™‰' : 'ðŸ™ˆ';
    toggle.setAttribute('aria-label', hidden ? 'Hide password' : 'Show password');
  });
});
</script>

<style>
.password-wrapper {
  position: relative;
  display: flex;
  align-items: centre;
}

.password-wrapper input {
  width: 100%;
  padding-right: 2.5rem;
}

.toggle-password {
  position: absolute;
  right: 0.75rem;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
  font-size: 1.25rem;
  line-height: 1;
}

.toggle-password:hover {
  transform: scale(1.15);
}
</style>
