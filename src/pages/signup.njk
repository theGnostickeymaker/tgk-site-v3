{% block head %}
  {% set socialImage = "/tgk-assets/images/share/system/signup.jpg" %}
  {% include "partials/head-meta.njk" %}
  {% set headline = "Join The Gnostic Key — Create Account" %}
  {% include "partials/jsonld-collection.njk" %}
{% endblock %}

<main class="main-content">
  <section class="content-container">

    <section class="section-block">
      <h2 class="section-heading">Begin Your Initiation</h2>
      <p class="lead muted">
        Create a free account to unlock your dashboard, save bookmarks,
        and begin your path through the hidden pages.
      </p>

      <form id="signup-form" class="tgk-form" novalidate autocomplete="off">

        <div class="form-group">
          <label for="signup-email">Email Address</label>
          <input
            type="email"
            id="signup-email"
            placeholder="you@example.com"
            autocomplete="email"
            required>
        </div>

        <div class="form-group">
          <label for="signup-email-confirm">Confirm Email Address</label>
          <input
            type="email"
            id="signup-email-confirm"
            placeholder="re enter your email"
            autocomplete="email"
            required>
        </div>

        <p id="email-mismatch" class="form-error" style="display:none;">
          The email addresses do not match. Please check and try again.
        </p>

        <div class="form-group">
          <label for="signup-password">Password</label>
          <input
            type="password"
            id="signup-password"
            placeholder="8+ characters, be wise"
            autocomplete="new-password"
            required>
        </div>

        <div class="btn-wrap center">
          <button type="submit" class="btn outline full-width">Create Account</button>
          <span id="signup-status" class="small muted"></span>
        </div>
      </form>

      <p class="auth-note">
        Already initiated? <a href="/signin/">Sign in here</a>.
      </p>
    </section>

  </section>

  <div class="gnostic-divider">
    <span class="divider-symbol pillar-glyph spin glow">{{ glyph }}</span>
  </div>
</main>

<script type="module" src="/js/tgk-auth.js?v={{ bust }}" defer></script>
