<main class="main-content page-auth">
  <section class="content-container">

    <section class="section-block auth-form">
      <h2 class="section-heading">Sign In</h2>
      <p class="lead muted">Enter your sacred credentials to access the hidden archives.</p>

      <form id="signin-form" class="tgk-form" novalidate>
        <div class="form-group">
          <label for="signin-email">Email Address</label>
          <input type="email" id="signin-email" placeholder="you@example.com" required>
        </div>

        <div class="form-group">
          <label for="signin-password">Password</label>
          <input type="password" id="signin-password" placeholder="Your password" required>
        </div>

        <button type="submit" class="btn outline full-width">Sign In</button>
      </form>

      <p class="auth-note">
        <a href="/password-reset/">Forgot your password?</a><br>
        New here? <a href="/signup/">Create an account</a>.
      </p>
    </section>
  </section>

