{# ============================================================
   TGK — Discussion Thread List (v3.0)
============================================================ #}

<section id="discussion" class="section-block">

  <h2 class="section-heading">Discussion Thread</h2>

  <div id="discussion-messages" class="discussion-messages">

    <template id="reply-template">
      <article class="discussion-message" data-reply-id="">

        <div class="discussion-message-header">

          <div class="vote-box">
            <button
              type="button"
              class="vote-btn"
              data-reply-id=""
              data-topic-id=""
              aria-label="Vote on this reply"
            >▲</button>
            <span class="vote-count">0</span>
          </div>

          <div class="author-box">
            <span class="discussion-message-author">Anonymous Seeker</span>
            <span class="discussion-message-meta">Just now</span>
          </div>

          <div class="admin-controls">
            <button class="btn-inline btn-pin-reply" data-reply-id="">Pin</button>
            <button class="btn-inline btn-edit-reply" data-reply-id="">Edit</button>
            <button class="btn-inline btn-delete-comment" data-reply-id="">Delete</button>
          </div>
        </div>

        <div class="discussion-message-steelman reply-steelman-body"></div>
        <div class="discussion-message-body reply-body-text"></div>

      </article>
    </template>

  </div>  <!-- end #discussion-messages -->

</section>  <!-- end #discussion -->
