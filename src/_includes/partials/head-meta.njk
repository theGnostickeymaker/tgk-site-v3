{# =========================================================
   üß† TGK ‚Äî Head Meta Partial (v2.5)
   Purpose:
   Defines essential SEO and social metadata for TGK pages.
   Ensures consistent appearance across all platforms.

   ‚úÖ Accepts:
   - title, description, author, published
   - socialImage: single image (string)
   - socialImages: object with keys { x, square, portrait, story, hero }

   üß≠ behavior:
   ‚Ä¢ Fallback chain for image priority:
     socialImages.hero ‚Üí socialImages.x ‚Üí socialImage ‚Üí default
   ‚Ä¢ Auto-generates OG, Twitter, and JSON-LD meta
   ========================================================= #}

{% set _title = title or "The Gnostic Key" %}
{% set _desc  = description or "A sacred digital library of forbidden history, esoteric wisdom, and spiritual rebellion." %}
{% set _author = author or "The Keymaker" %}
{% set _date = published or false %}
{% set _url = site.url | default('https://thegnostickey.com') ~ (page.url or '/') %}

{# üñºÔ∏è Image resolution fallback chain #}
{% set _img =
    (socialImages and (socialImages.hero or socialImages.x or socialImages.square or socialImages.portrait)) or
    socialImage or
    "/tgk-assets/images/share/tgk-index-main.jpg"
%}

<!-- üîπ Basic SEO -->
<meta name="description" content="{{ _desc }}">
<meta name="author" content="{{ _author }}">

<!-- üîπ Open Graph -->
<meta property="og:type" content="article">
<meta property="og:site_name" content="The Gnostic Key">
<meta property="og:title" content="{{ _title }}">
<meta property="og:description" content="{{ _desc }}">
<meta property="og:image" content="{{ _img }}">
<meta property="og:image:alt" content="{{ _title }} ‚Äî The Gnostic Key">
<meta property="og:url" content="{{ _url }}">
{% if _date %}<meta property="article:published_time" content="{{ _date }}">{% endif %}
<meta property="article:author" content="{{ _author }}">

<!-- üîπ Twitter Card -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@thegnostickey">
<meta name="twitter:title" content="{{ _title }}">
<meta name="twitter:description" content="{{ _desc }}">
<meta name="twitter:image" content="{{ _img }}">

<!-- üîπ Canonical -->
<link rel="canonical" href="{{ _url }}">

{% if _date %}
<!-- üîπ Structured Data (JSON-LD for Articles) -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "{{ _title | escape }}",
  "description": "{{ _desc | escape }}",
  "image": "{{ _img }}",
  "author": {
    "@type": "Person",
    "name": "{{ _author }}"
  },
  "publisher": {
    "@type": "Organization",
    "name": "The Gnostic Key",
    "logo": {
      "@type": "ImageObject",
      "url": "https://thegnostickey.com/tgk-assets/images/tgk-logo-meta.png"
    }
  },
  "datePublished": "{{ _date }}",
  "url": "{{ _url }}"
}
</script>
{% endif %}
