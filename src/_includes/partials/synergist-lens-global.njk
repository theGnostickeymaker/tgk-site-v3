     synergyMap = {
       nodes: [
         { id: "scroll001", title: "Gnostic Christianity", url: "/pillars/â€¦", pillar: "the-teachings" },
         { id: "vault003", title: "Apocryphon of John", url: "/pillars/the-vault/â€¦", pillar: "the-vault" },
