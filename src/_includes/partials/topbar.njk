{# ===========================================================
   TGK â€” Unified Site Header (v4.1)
   Hierarchy:
     â€¢ Site Title   (tiny, optional)
     â€¢ Pillar Title (tiny, optional)
     â€¢ Gate Title   (tiny, optional unless Series exists)

     â€¢ Series Title  (large, always shown when provided)
     â€¢ Season Title  (medium)
     â€¢ Episode Title (medium-small)
     â€¢ Part Title    (small highlight)

   SEO "title:" is NOT displayed.
   =========================================================== #}

<header class="site-header minimal" role="banner">

  {# ---------------------------------------------------------
     Breadcrumb Navigation
     --------------------------------------------------------- #}
  {% if breadcrumbs %}
  <nav class="breadcrumbs" aria-label="Breadcrumb">
    <span class="crumbs">
      {%- for bc in breadcrumbs -%}
        {%- if not loop.first %}<span class="sep"> | </span>{% endif -%}
        {%- if bc.url -%}
          <a href="{{ bc.url }}">{{ bc.title }}</a>
        {%- else -%}
          <span aria-current="page">{{ bc.title }}</span>
        {%- endif -%}
      {%- endfor -%}
    </span>
  </nav>
  {% endif %}

  <div class="header-main">

    {# =========================================================
       0. GLYPH CLUSTER
       ========================================================= #}
    {% if glyphRow %}
      <span class="pillar-glyph-row" aria-hidden="true">
        {% for g in glyphRow %}
          <span class="pillar-glyph">{{ g }}</span>
        {% endfor %}
      </span>
    {% elseif pillarGlyph or glyph %}
      <span class="pillar-glyph" aria-hidden="true">{{ pillarGlyph or glyph }}</span>
    {% endif %}

    {# =========================================================
      1. UPPER BAND â€” small context line
      Always displays:
        The Gnostic Key Â· The Teachings Â· The Great Return
      ========================================================= #}

    {% set upperItems = [] %}

    {% if siteTitle %}
      {% set upperItems = upperItems.concat([siteTitle]) %}
    {% endif %}

    {% if pillarTitle %}
      {% set upperItems = upperItems.concat([pillarTitle]) %}
    {% endif %}

    {% if gateTitle %}
      {% set upperItems = upperItems.concat([gateTitle]) %}
    {% endif %}

    {% if upperItems.length %}
      <div class="upper-band-line">
        {%- for i in upperItems -%}
          {{ i }}{% if not loop.last %} Â· {% endif %}
        {%- endfor -%}
      </div>
    {% endif %}


    {# =========================================================
       2. HIERARCHY BLOCK â€” Series, Season, Episode, Part
       ========================================================= #}
    <div class="hierarchy-block">

      {% if seriesTitle %}
        <h1 class="series-title">{{ seriesTitle }}</h1>
      {% endif %}

      {% if seasonTitle %}
        <h2 class="season-title">{{ seasonTitle }}</h2>
      {% endif %}

      {% if episodeTitle %}
        <h3 class="episode-title">{{ episodeTitle }}</h3>
      {% endif %}

      {% if partTitle %}
        <h4 class="part-title">{{ partTitle }}</h4>
      {% endif %}
    </div>

    {# ---------------------------------------------------------
       Tagline
       --------------------------------------------------------- #}
    {% if tagline %}
      <p class="page-tagline">{{ tagline }}</p>
    {% endif %}

    {# ---------------------------------------------------------
       Publication Metadata
       --------------------------------------------------------- #}
    {% if author or published %}
      <div class="page-meta header-inline">
        {% if author %}
          <span class="page-author">{{ author }}</span>
        {% endif %}
        {% if author and published %}
          <span class="meta-sep">â€¢</span>
        {% endif %}
        {% if published %}
          <span class="page-date">{{ published | tgkDate }}</span>
        {% endif %}
      </div>
    {% endif %}

  </div>
</header>


