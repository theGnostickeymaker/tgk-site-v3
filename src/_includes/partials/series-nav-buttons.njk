{% if seriesNav and seriesNav.length %}
  <p>Explore the next gates:</p>
  <ul class="list-emoji">
    {% for item in seriesNav %}
      <li>
        {% if page.url == item.url %}
          <span class="active-scroll">{{ item.title }} — {{ item.desc }}</span>
        {% else %}
          <a href="{{ item.url }}">{{ item.title }}</a> — {{ item.desc }}
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% else %}
  <p class="series-map-empty">⚠️ No seriesNav found — add it to your episode .11tydata.js</p>
{% endif %}
