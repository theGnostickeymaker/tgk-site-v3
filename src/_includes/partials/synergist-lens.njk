{% if (crossLinks and crossLinks.length) 
   or (vaultRefs and vaultRefs.length) 
   or (communityThreads and communityThreads.length) 
   or (relatedProducts and relatedProducts.length) %}

<!-- âˆž Synergist Lens -->
<section id="lens" class="section-block synergist-lens" tabindex="-1" aria-labelledby="lens-heading">
  <h2 id="lens-heading" class="section-heading">âˆž Synergist Lens</h2>

  {% if crossLinks and crossLinks.length %}
  <div class="lens-block">
    <h3 class="lens-heading">
      <span class="pillar-glyph">âš¯</span> Cross-Threads
    </h3>
    <ul class="lens-list">
      {% for item in crossLinks %}
        <li class="lens-item">
          <a href="{{ item.path }}" class="lens-link">{{ item.title }}</a>
          {% if item.desc %}
            <p class="lens-desc">{{ item.desc }}</p>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}

  {% if vaultRefs and vaultRefs.length %}
  <div class="lens-block">
    <h3 class="lens-heading">
      <span class="pillar-glyph">ðŸ“œ</span> Vault References
    </h3>
    <ul class="lens-list">
      {% for ref in vaultRefs %}
        <li class="lens-item">
          <a href="{{ ref.path }}" class="lens-link">{{ ref.title }}</a>
          {% if ref.desc %}
            <p class="lens-desc">{{ ref.desc }}</p>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}

  {% if communityThreads and communityThreads.length %}
  <div class="lens-block">
    <h3 class="lens-heading">
      <span class="pillar-glyph">âœº</span> Community Threads
    </h3>
    <ul class="lens-list">
      {% for thread in communityThreads %}
        <li class="lens-item">
          <a href="{{ thread.path }}" class="lens-link">{{ thread.title }}</a>
          {% if thread.desc %}
            <p class="lens-desc">{{ thread.desc }}</p>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}

  {% if relatedProducts and relatedProducts.length %}
  <div class="lens-block">
    <h3 class="lens-heading">
      <span class="pillar-glyph">âš’</span> Related Artifacts
    </h3>
    <ul class="lens-list">
      {% for product in relatedProducts %}
        <li class="lens-item">
          <a href="{{ product.path }}" class="lens-link">{{ product.title }}</a>
          {% if product.desc %}
            <p class="lens-desc">{{ product.desc }}</p>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}

</section>
{% endif %}
