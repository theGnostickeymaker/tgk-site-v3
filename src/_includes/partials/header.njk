{% set data = headerData or {
  title: title,
  tagline: tagline or description or "",
  glyphRow: glyphRow or [glyph or ""],
  breadcrumbs: breadcrumbs or []
} %}

<header class="page-header">
  <div class="header-inner">
    <div class="glyph-row">
      {% for g in data.glyphRow %}
        <span class="glyph">{{ g }}</span>
      {% endfor %}
    </div>

    <div class="title-wrap">
      <h1 class="page-title">{{ data.title }}</h1>
      {% if data.tagline %}
        <p class="page-tagline">{{ data.tagline }}</p>
      {% endif %}
    </div>

    {% if data.breadcrumbs and data.breadcrumbs | length > 0 %}
      <nav class="breadcrumbs">
        <ul>
          {% for crumb in data.breadcrumbs %}
            <li>
              {% if crumb.url %}
                <a href="{{ crumb.url }}">{{ crumb.title }}</a>
              {% else %}
                <span>{{ crumb.title }}</span>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </nav>
    {% endif %}
  </div>
</header>
